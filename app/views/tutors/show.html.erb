<h3>Master</h3>
  <% @master_tech.each do |tech| %>
    <%= tech.technology.name %>
  <% end %>

<h3>Experienced</h3>
  <% @experienced_tech.each do |tech| %>
    <%= tech.technology.name %>
  <% end %>

<h3>Fresh</h3>
  <% @fresh_tech.each do |tech| %>
    <%= tech.technology.name %>
  <% end %>

  <%= link_to  "Check Availability", new_session_path(:tutor_id => @tutor.id) %>