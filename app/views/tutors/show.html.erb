<h1>This is the tutor show page</h1>

<ul>
  <li><%= @tutor.user.firstname %> <%= @tutor.user.lastname %></li>
  <li>Lead <%= @sessions_count %> sessions</li>
  <li><%= @tutor.experience %> Dev</li>
  <li><%= @tutor.bio %></li>
  <li><%= @tutor.style %></li>
  <li>$<%= @tutor.pricing / 100.00 %></li>
  <li>Average Rating <%= @ratings_avg_score %></li>
</ul>

