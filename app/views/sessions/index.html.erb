<h1 class="mt-4"><%= "#{current_user.firstname} #{current_user.lastname}"%></h1>

<h2>Upcoming Sessions</h2>


<table class=" table table-striped table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>Date and Time</th>
      <th>Tutor</th>
      <th>Duration (mins)</th>
      <th>Note</th>
    </tr>
  </thead>

<tbody class="mt-4">
  <% @sessions.each do |session| %>
    <tr>
      <td><%= link_to "#{session.id}", show_session_path(:id => session.id)  %></td>
      <td><%= session.timestamp %></td>
      <td><%= "#{session.tutor.user.firstname} #{session.tutor.user.lastname}" %></td>
      <td><%= session.duration %></td>
      <td><%= session.note %></td>
    </tr>
  <% end %>
</tbody>
</table>
